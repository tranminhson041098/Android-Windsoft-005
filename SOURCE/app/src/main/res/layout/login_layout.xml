<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#FFFCCC"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="5"

    >
    <!-- jfdjfdn-->
    




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@mipmap/img_logo"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginHorizontal="30dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Đăng nhập"
            android:layout_marginHorizontal="30dp"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"

            />
        <View
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:background="#FF00"

            />
            >

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:text="XIN CHÀ0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:text="Đăng nhập bằng số điện thoại"
            android:textStyle="bold"

            />
        <EditText




            android:id="@+id/edt_phone_number"
            android:padding="20dp"
            android:hint="Số điện thoại"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/gray_round_background"
            android:layout_marginHorizontal="30dp"

            />


        <RelativeLayout
            android:id="@+id/rl_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/login_button_selector"
            android:clickable="true">

            <TextView

                android:layout_width="match_parent"

                android:layout_height="40dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="ĐĂNG NHẬP"
                android:textColor="#fff"

                android:textSize="25sp"

                />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"

                android:src="@drawable/img_button" />

        </RelativeLayout>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:text="Hình thức đăng nhâp khác"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/img_fb_login"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@mipmap/ic_fb" />
            <ImageView
                android:id="@+id/img_gg_login"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@mipmap/ic_gg" />


    </LinearLayout>



    </LinearLayout>



</LinearLayout>

